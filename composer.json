{
    "name": "amarie88/drupal-recommended-project",
    "description": "Project template for Drupal 9.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alexandre Marie",
            "email": "alex.web56@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8",
            "only": [
                "drupal/*"
            ]
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "consolidation/robo": "^2.2",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.0",
        "drupal/core-composer-scaffold": "^9.1",
        "drupal/core-recommended": "^9.1",
        "drupal/ctools": "^3.6",
        "drupal/jquery_ui": "^1.4",
        "drupal/metatag": "^1.16",
        "drupal/pathauto": "^1.8",
        "drupal/token": "^1.9",
        "drush/drush": "^10.5"
    },
    "require-dev": {
        "amarie88/robo-drupal-coding": "^1.0",
        "drupal/core-dev": "^9.1",
        "drupal/devel": "^4.1",
        "drupal/devel_php": "^1.3",
        "drupal/stage_file_proxy": "^1.1",
        "kint-php/kint": "^3.3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "patches-file": "./patches/patches.json",
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/README.txt": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/sites/README.txt": false,
                "[web-root]/themes/README.txt": false,
                "[web-root]/modules/README.txt": false,
                "[web-root]/profiles/README.txt": false,
                "[web-root]/example.gitignore": false
            }
            },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        }
    }
}
